using System;
using System.Collections.Generic;
using System.ComponentModel.DataAnnotations;
using System.ComponentModel.DataAnnotations.Schema;

using OpenGameListWebApp.Data.E_Customer

namespace OpenGameListWebApp.Data.E_Invoice

{
    public class E_Invoice
    {
        #region Constructor
        public E_Invoice()
        {

        }
        #endregion Constructor

        #region Properties
		[Key]
		[Required]
		public int ID { get; set; }
		[Required]
		public int Lalala { get; set; }
		[Required]
		public int CustomerID { get; set; }
		[Required]
		public DateTime DateCreation { get; set; }
		[Required]
		public DateTime DateApproval { get; set; }
		[Required]
		public Boolean IsApproved { get; set; }
		[Required]
		public Decimal TotalValueWithoutVAT { get; set; }
		[Required]
		public Decimal TotalValueWithVAT { get; set; }
		public String Description { get; set; }
		#endregion Properties
		
		#region Related Properties
		[ForeignKey("CustomerID")]
		public virtual E_Customer CustomerIDRP { get; set; }
		#endregion Related Properties
	
	}

}
